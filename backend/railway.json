{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "bash -c 'source .venv/bin/activate && gunicorn grandgold_wsgi:application --bind 0.0.0.0:$PORT --workers 4 --timeout 120'",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

